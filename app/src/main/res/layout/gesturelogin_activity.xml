<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip">

        <ImageView
            android:id="@+id/gesturepwd_unlock_face"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_centerInParent="true"
            android:padding="4.0dip"
            android:scaleType="fitXY" />
        <!-- android:background="@drawable/card_avatar" -->
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_gesture_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_gesture_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <com.android.common.ui.gesturelock.GestureLockView
            android:id="@+id/gestureLockView_pwd"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_gesture_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="忘记手势密码"
            android:textColor="#80869c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_gesture_userOtherLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="其他账号登录"
            android:textColor="#80869c"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>