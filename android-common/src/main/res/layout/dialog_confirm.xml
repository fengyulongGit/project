<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="258dp"
    android:layout_height="144dp"
    android:background="@drawable/dialog_confirm_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/dialog_confirm_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="提示内容"
            android:textColor="#333333"
            android:padding="10dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/dialog_confirm_btn_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/iv_close"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadade" />

    <LinearLayout
        android:id="@+id/ll_left_right_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <Button
            android:id="@+id/dialog_confirm_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_confirm_btn_left_bg"
            android:text="取消"
            android:textColor="#2a9fe3"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dadade" />

        <Button
            android:id="@+id/dialog_confirm_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_confirm_btn_right_bg"
            android:text="确定"
            android:textColor="#2a9fe3"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <Button
            android:id="@+id/dialog_confirm_btn_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_confirm_btn_bottom_bg"
            android:text="确定"
            android:textColor="#2a9fe3"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
